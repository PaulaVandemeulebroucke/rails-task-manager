<h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed == true %>
    <%= link_to done_path(@task), method: :patch do%>
    <i class="fa fa-check-square"></i>
    <% end %>
  <% else  %>
   <%= link_to done_path(@task), method: :patch do%>
    <i class="far fa-square"></i>
    <% end %>
  <% end %>

<h3><%= link_to "Update a task", edit_path(@task) %></h3>
<%= link_to "Go Back to my tasks", tasks_path %>
