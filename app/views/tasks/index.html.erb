<h1>Tout ce qu'il y a à faire:</h1>
<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <p><%= task.details %></p>
  <% if task.completed == true %>
    <%= link_to done_path(task), method: :patch do%>
    <i class="fa fa-check-square"></i>
    <% end %>
  <% else  %>
   <%= link_to done_path(task), method: :patch do%>
    <i class="far fa-square"></i>
    <% end %>
  <% end %>
  <%= link_to task_path(task), method: :delete do %>
      <i class="fa fa-trash-alt"></i>
  <% end %>
<% end %>

<h3><%= link_to "+ Ajouter une tâche", tasks_new_path %></h3>

